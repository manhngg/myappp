<div class="col-sm-3">
  <h2 class="titto"><%= t "brand" %></h2>
  <div class="brands-name">
    <% brands.each do |brand| %>
      <ul class="nav nav-pills nav-stacked">
        <li>
          <%= link_to brand do %>
            <span class="pull-right">(<%= brand.products.size %>)</span>
            <%= brand.name %>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
