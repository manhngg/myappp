<div class="col-sm-3">
  <div class="left-sidebar">
    <div class="brands_products">
      <h2><%= t "brands" %></h2>
      <div class="brands-name">
        <% brands.each do |brand| %>
          <ul class="nav nav-pills nav-stacked">
            <li>
              <%= link_to brand do %>
                <span class="pull-right">(<%= brand.products.size %>)</span>
                <%= brand.name %>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
