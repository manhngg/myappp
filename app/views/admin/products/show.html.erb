<% provide :title, @product.name %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="add-to-cart-button">
      <%= t "product" %>: <%= @product.name %>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th><%= t "name_product" %></th>
          <th><%= t "name_brand" %></th>
          <th><%= t "available" %></th>
          <th><%= t "price" %></th>
          <th><%= t "option" %></th>
        </tr>
        <tr>
          <td><%= link_to @product.name, @product %></td>
          <td><%= link_to @product.brand.name, @product.brand %></td>
          <td><%= @product.available? ? t("stock") : t("out_of_stock") %></td>
          <td><%= number_to_currency @product.price %></td>
          <td>
            <%= link_to t("edit"), edit_admin_product_path(@product) %> |
            <%= link_to t("delete"), admin_product_path(@product),
              method: :delete, data: {confirm: t("are_you_sure")} %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
