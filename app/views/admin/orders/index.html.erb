<% provide :title, t("product") %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="add-to-cart-button">
      <%= t "order" %>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover sortable">
        <thead>
          <tr>
            <th><%= t "name_order" %></th>
            <th><%= t "address" %></th>
            <th><%= t "status" %></th>
            <th><%= t "time_buy" %></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.user_id? ? order.name : t("quest"),
                admin_order_path(order) %></td>
              <td><%= order.address %></td>
              <td><%= t "#{order.order_status}" %></td>
              <td><%= l order.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= will_paginate @orders %>
  </div>
</div>
