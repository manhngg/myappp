<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="add-to-cart-button"><%= t "overview" %></div>
    <div class="panel-body">
      <div class="col-md-3">
        <div class="well dash-box">
          <h2>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <%= @supports.users.size %>
          </h2>
          <h4><%= t "users" %></h4>
        </div>
      </div>
      <div class="col-md-3">
        <div class="well dash-box">
          <h2>
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
            <%= @supports.brands.size %>
          </h2>
          <h4><%= t "brands" %></h4>
        </div>
      </div>
      <div class="col-md-3">
        <div class="well dash-box">
          <h2>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <%= @supports.products.size %>
          </h2>
          <h4><%= t "products" %></h4>
        </div>
      </div>
      <div class="col-md-3">
        <div class="well dash-box">
          <h2>
            <span class="fa fa-credit-card" aria-hidden="true"></span>
            <%= @supports.coupons.size %>
          </h2>
          <h4><%= t "coupon" %></h4>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-primary">
    <div class="add-to-cart-button">
      <%= t "latest_users" %>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th><%= t "name" %></th>
          <th><%= t "mail" %></th>
          <th><%= t "joined" %></th>
        </tr>
        <% @supports.users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= l user.created_at %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
